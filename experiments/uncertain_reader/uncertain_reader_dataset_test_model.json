{
  "dataset_reader": {
    "type": "writing_prompts_whole_story",
    "tokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "spacy"
      }
    },
    "source_token_indexers": {
      "tokens": {
        "type": "elmo_characters",
        "namespace": "elmo_tokens"
      }
    },
    "target_token_indexers": {
      "target": {
        "type": "single_id",
        "namespace": "target"
      }
    },
    "dataset_path": "/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/dataset_db/text",
    "use_existing_cached_db": true,
    "cuda_device": [
      0,
      1,
      2,
      3
    ],
    "lazy": true
  },
  //"/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/datasets/first_500",
  "train_data_path": "/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/datasets/first_500",
  //"/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/datasets/train.wp_target",
  "validation_data_path": "/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/datasets/first_500",
  //"/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/datasets/valid.wp_target",
  "test_data_path": "/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/datasets/first_500",
  //"/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/datasets/test.wp_target",
  "evaluate_on_test": true,
  "model": {
    "type": "uncertain_reader",
    "text_field_embedder": {
      "tokens": {
        "type": "elmo_token_embedder",
        "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x4096_512_2048cnn_2xhighway/elmo_2x4096_512_2048cnn_2xhighway_options.json",
        "weight_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x4096_512_2048cnn_2xhighway/elmo_2x4096_512_2048cnn_2xhighway_weights.hdf5",
        "do_layer_norm": false,
        "dropout": 0.0
      }
    },
    "target_field_embedder": {
      "target": {
        "type": "embedding",
        "pretrained_file": "/afs/inf.ed.ac.uk/group/project/comics/stories/word_embeddings/glove.42B.300d.zip",
        "embedding_dim": 300,
        "vocab_namespace": "target",
        "trainable": true
      }
    },
    /*
        "sentence_seq2seq_encoder": {
          "type": "gru",
          "input_size": 1024,
          "hidden_size": 1024,
          "num_layers": 3,
          "dropout": 0.0
        },*/
    "story_seq2seq_encoder": {
      "type": "gru",
      "input_size": 1024,
      "hidden_size": 1024,
      "num_layers": 3,
      "dropout": 0.0
    },
    "sentence_story_fusion_encoder": {
      "type": "feedforward",
      "feedforward": {
        "input_dim": 2048,
        "num_layers": 2,
        "hidden_dims": 1024,
        "activations": "leaky_relu",
        "dropout": 0.25
      }
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 4
  },
  "trainer": {
    "num_epochs": 100,
    "patience": 5,
    "cuda_device": [
      3
    ],
    //"validation_metric": "+neighbour_accuracy",
    "num_serialized_models_to_keep": 3,
    "optimizer": {
      "type": "adam",
      "lr": 0.001,
      "amsgrad": true
    },
    "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
  }
}

