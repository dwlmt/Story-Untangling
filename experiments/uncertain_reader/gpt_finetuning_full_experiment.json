{
  "dataset_reader": {
    "type": "writing_prompts_whole_story",
    "tokenizer": {
      "type": "word",
      "word_splitter": {
        "type": "openai"
      }
    },
    "token_indexers": {
      "openai_transformer": {
        "type": "openai_transformer_byte_pair",
        "n_ctx": 100,
        "model_path": "https://s3-us-west-2.amazonaws.com/allennlp/models/openai-transformer-lm-2018.07.23.tar.gz"
      }
    },
    "dataset_path": "/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/dataset_db/base",
    "use_existing_cached_db": true,
    "cuda_device": [
      0,
      1,
      2,
      3
    ],
    "lazy": true
  },
  //"/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/datasets/first_500",
  "train_data_path": "/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/datasets/train.wp_target",
  "validation_data_path": "/afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/datasets/valid.wp_target",
  "test_data_path": "afs/inf.ed.ac.uk/group/project/comics/stories/WritingPrompts/datasets/test.wp_target",
  "evaluate_on_test": true,
  "model": {
    "type": "uncertain_reader",
    "disc_loss": true,
    "gen_loss": true,
    "lm_finetune_top_layers": 3,
    "distance_weights": [
      1.0
    ],
    "text_field_embedder": {
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
        "openai_transformer": [
          "openai_transformer",
          "openai_transformer-offsets"
        ]
      },
      "token_embedders": {
        "openai_transformer": {
          "type": "openai_transformer_embedder",
          "transformer": {
            "n_ctx": 100,
            "model_path": "https://s3-us-west-2.amazonaws.com/allennlp/models/openai-transformer-lm-2018.07.23.tar.gz",
          }
        }
      }
    },
    "sentence_seq2seq_encoder": {
      "type": "gru",
      "input_size": 768,
      "hidden_size": 768,
      "num_layers": 2,
      "dropout": 0.0
    },
    "story_seq2seq_encoder": {
      "type": "gru",
      "input_size": 768,
      "hidden_size": 768,
      "num_layers": 3,
      "dropout": 0.0
    },
    "story_feedforward": {
      "input_dim": 768,
      "num_layers": 2,
      "hidden_dims": 768,
      "activations": "elu",
      "dropout": 0.0
    }
    /*,
        "target_feedforward": {
          "input_dim": 768,
          "num_layers": 2,
          "hidden_dims": 768,
          "activations": "elu",
          "dropout": 0.0
        }*/,
    //"bilinear_fusion": true,
    "fusion_seq2seq_encoder": {
      "type": "feedforward",
      "feedforward": {
        "input_dim": 1536,
        "num_layers": 1,
        "hidden_dims": 768,
        "activations": "elu",
        "dropout": 0.0
      }
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 2
  },
  "trainer": {
    "num_epochs": 1,
    "patience": 5,
    "cuda_device": [
      1
    ],
    //"validation_metric": "+neighbour_accuracy",
    "num_serialized_models_to_keep": 3,
    "optimizer": {
      "type": "sgd",
      "lr": 0.01,
      "momentum": 0.9,
      "nesterov": true
    },
    "learning_rate_scheduler": {
      "type": "reduce_on_plateau",
      "factor": 0.5,
      "mode": "max",
      "patience": 0
    }
  }
}

